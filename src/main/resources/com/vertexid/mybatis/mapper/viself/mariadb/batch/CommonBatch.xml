<!--
  ~ Description:
  ~     Batch job 공용
  -->
<mapper namespace="com.vertexid.viself.batch.CommonBatch.mariadb">
    <select id="getBatchInfo" parameterType="map" resultType="paramMap">
        SELECT j.*
            , TIMESTAMPDIFF(HOUR , j.JOB_ST_DTIME, now()) h_diff
         FROM t_sys_batch_status j
        WHERE j.JOB_NM = #{jobName}
    </select>

    <insert id="insertBatch" parameterType="com.vertexid.viself.batch.BatchJobDTO">
        INSERT INTO t_sys_batch_status(
            JOB_NM, JOB_ST_DTIME
        )VALUES(
            #{jobName}, NOW()
        )
    </insert>

    <delete id="deleteBatch"  parameterType="com.vertexid.viself.batch.BatchJobDTO">
        DELETE FROM t_sys_batch_status
        WHERE JOB_NM = #{jobName}
    </delete>
</mapper>