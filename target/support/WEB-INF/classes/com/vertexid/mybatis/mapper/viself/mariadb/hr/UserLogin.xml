<mapper namespace="com.vertexid.viself.hr.UserLogin.mariadb">
    <select id="login" parameterType="paramMap" resultType="paramMap" fetchSize="1000">
			select
				*
			from v_sys_user
			where UPPER(login_id) = UPPER(#{loginId})
    </select>
</mapper>