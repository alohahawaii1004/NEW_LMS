<!-- Issue History Mapper -->
<mapper namespace="com.vertexid.support.issue.IssueHis.mariadb">
    <insert id="insertHis" parameterType="com.vertexid.support.issue.IssueHisDTO">
        INSERT INTO t_issue_his(
            ISSUE_ID
            , HIS_DTE
            , ACTOR
            , ISSUE_STU_CD
            , CONTENT
            , REQUEST_PARAM
        ) VALUES (
            #{issueId}
            , NOW()
            , #{loginInfo.loginId}
            , #{issueStuCd}
            , #{content}
            , #{requestParam}
        )
    </insert>
</mapper>